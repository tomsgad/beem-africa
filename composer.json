{
    "name": "tomsgad/laravel-beem",
    "description": "Effortless Beem integrations with Laravel",
    "keywords": [
        "tomsgad",
        "laravel",
        "laravel-beem",
        "beem",
        "beem-africa",
        "beem-api"
    ],
    "homepage": "https://github.com/tomsgad/laravel-beem",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Thomson Maguru",
            "email": "thomson@magurugroup.co.tz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3",
        "illuminate/notifications": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Tomsgad\\Beem\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tomsgad\\Beem\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tomsgad\\Beem\\BeemServiceProvider"
            ],
            "aliases": {
                "OTP": "Tomsgad\\Beem\\Facades\\OTP"
            }
        }
    }
}
